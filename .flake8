[flake8]
# Flake8 configuration file

# Maximum line length
max-line-length = 90

# Maximum complexity (cyclomatic complexity)
max-complexity = 10

# Ignore specific error codes
ignore =
    E203,
    E501,
    W503,
    W504,
    F401,
    E402

# Exclude directories and files
exclude =
    .git,
    __pycache__,
    docs,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    migrations,
    alembic/versions,
    .pytest_cache

# Per-file ignores (if needed)
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    conftest.py:F401,F811

# Enable/disable specific checks
select = E,W,F,C

# Import order style
import-order-style = google

# Docstring conventions
docstring-convention = google

# Show source code for each error
show-source = True
count = True

# Enable certain extensions
enable-extensions =
    G  # flake8-logging-format
